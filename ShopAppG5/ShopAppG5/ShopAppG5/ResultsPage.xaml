<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopAppG5.ResultsPage">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <ImageButton HorizontalOptions="End" VerticalOptions="Center" Source="shopCart.png" HeightRequest="45" WidthRequest="45" Clicked="moveToShoppingCart"/>

        </StackLayout>
       
    </NavigationPage.TitleView>
    
    <Grid BackgroundColor="#b195d2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" Text="Results" TextColor="Beige" FontAttributes="Bold" FontSize="30"  HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name ="filteredOption" Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="2" Text="" TextColor="Beige"  FontSize="18" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>

        <Label  x:Name="queryResult" IsVisible="true" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Center" VerticalOptions="Center" Text="Loading..." FontAttributes="Bold" FontSize="20"/>
        <ListView Grid.Row="2" IsVisible="false" Grid.Column="0" Grid.ColumnSpan="2" x:Name="itemList" Margin="20,20,20,20" BackgroundColor="#CDB0EE" ItemTapped="moveToDetails">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell  TextColor="white" Text="{Binding title}" ImageSource="{Binding image}" Detail="{Binding price.raw} "/>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>



    </Grid>
</ContentPage>